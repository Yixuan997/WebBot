#==================================
# 环境配置
#==================================
# 环境类型(development/production)
FLASK_ENV=production
# 是否开启调试模式
DEBUG=false
# 生产环境密钥
SECRET_KEY=c9c9c0c1c2c3c4c5c6c7c8c9c0c1c2c3

#==================================
# 数据库配置
#==================================
# 数据库URI
SQLALCHEMY_DATABASE_URI=sqlite:///Bot.Y
# 数据库文件名（可选，默认从URI中提取）
DATABASE_NAME=Bot.Y
# 连接池大小
DB_POOL_SIZE=8
# 连接池超时时间(秒)
DB_POOL_TIMEOUT=30
# 最大溢出连接数
DB_MAX_OVERFLOW=2
# 池回收时间(秒)
DB_POOL_RECYCLE=3600
#==================================
# Redis配置
#==================================
# Redis连接URL
REDIS_URL=redis://:password@127.0.0.1:6379/1
# 最大连接数
REDIS_MAX_CONNECTIONS=80
# Socket超时(秒) - 减小超时加快故障检测
REDIS_SOCKET_TIMEOUT=3
# Socket连接超时(秒)
REDIS_SOCKET_CONNECT_TIMEOUT=3
# 健康检查间隔(秒) - 延长间隔减少开销
REDIS_HEALTH_CHECK_INTERVAL=180
# 客户端超时(秒)
REDIS_CLIENT_TIMEOUT=1
# 重试阈值
REDIS_RETRY_THRESHOLD=3
# 预连接数
REDIS_POOL_PRECONNECT=2
# 连接池使用率警告阈值(%)
REDIS_POOL_USAGE_WARNING=75
#==================================
# Session配置
#==================================
# 已登录用户会话过期时间(秒)
PERMANENT_SESSION_LIFETIME=7200
# 未登录用户会话过期时间(秒)
GUEST_SESSION_LIFETIME=900
# 验证码过期时间(秒)
CAPTCHA_LIFETIME=300
# 缓存过期时间(秒)
CACHE_LIFETIME=3600

#==================================
# 默认管理员配置
#==================================
# 默认管理员用户名
DEFAULT_ADMIN_USERNAME=admin
# 默认管理员密码
DEFAULT_ADMIN_PASSWORD=admin123
# 默认管理员邮箱
DEFAULT_ADMIN_EMAIL=admin@qqbot.local
# 默认管理员QQ（可选）
DEFAULT_ADMIN_QQ=10001
